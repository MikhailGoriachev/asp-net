@functions {
    string Active(string page) => ViewBag.Active == page ? "active" : "";
}
<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Задание на 27.06.2022 - @ViewBag.Title</title>

      <!-- внешнее подключение стилевого файла  -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/table.css">
    <link rel="stylesheet" href="/css/nav-controls.css">

    <!-- еще один пример внешнего подключения -->
    <link rel="icon" href="/images/blimp.png" type="image/x-icon">
    <!-- картинка для отображения в заголовке вкладки браузера -->
    <link rel="shortcut icon" href="/images/blimp.png" type="image/x-icon" />
</head>

<body>
<header>
    <h1>@ViewBag.Header</h1>
</header>

<div class="container">
    <!-- левая часть контейнера-->
    <aside>
        <nav>
            <ul class="menu-list">
                <li class="menu-list-li"><a class="link @Active("Index")" asp-page="/Index">Главная страница</a></li>
                <li class="menu-list-li">
                    <a class="link @Active("Page1")" asp-page="/Page1" 
                       title="Ввод и отображение сведений о бытовой технике">
                        Страница 1</a></li>
                <li class="menu-list-li">
                    <a class="link  @Active("Page2")" asp-page="/Page2" 
                       title="Обработка коллекции сведений о бытовой технике">
                        Страница 2
                </a></li>
                <li class="menu-list-li">
                    <a class="link  @Active("Page3")" asp-page="/Page3" 
                       title="Обработка коллекции сведений о плоских геометрических фигурах">
                        Страница 3
                </a></li>

            </ul>
        </nav>
    </aside>

    <!-- контент -->
    <main>
        @RenderBody()
    </main>
</div>

<footer>
    <h4 class="header-footer">Студент Программер, ПД011, Донецк, 2022</h4>
</footer>
</body>
</html>