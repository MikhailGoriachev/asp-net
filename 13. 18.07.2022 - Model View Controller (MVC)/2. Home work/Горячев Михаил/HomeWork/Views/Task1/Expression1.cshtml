@model HomeWork.Models.Expression1

<section class="mx-5 my-4 bg-light shadow-sm border rounded-3 h-75 p-3">
    <h2>@ViewBag.Title</h2>

    <hr>

    @* условия задания *@
    <img src="~/images/image1.png" alt="image1">

    <hr>

    @* исходные данные *@
    <h5>Дано:</h5>
    <ul>
        <li>X: <b>@($"{Model.X:f6}")</b></li>
        <li>Y: <b>@($"{Model.Y:f6}")</b></li>
        <li>Z: <b>@($"{Model.Z:f6}")</b></li>
    </ul>

    <hr>

    @* вычисление результата *@
    <h5>Ответ:</h5>
    <ul>
        <li>A: <b>@($"{Model.A:f6}")</b></li>
        <li>B: <b>@($"{Model.B:f6}")</b></li>
    </ul>
</section>
