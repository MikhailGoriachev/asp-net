@using HomeWork.Components
@model HomeWork.Models.BindingModels.RangeBindingModel

@{
    @* скрипты валидации *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    ViewBag.Title = $"Выборка по диапазону диаметра {Model.Min} - {Model.Max}";
    ViewBag.PageName = "SelectPlanets";
}
<section class="mx-5 mt-4 mb-2 shadow-sm bg-dark rounded-3 h-75 p-3">
    <form asp-controller="Planets" asp-action="SelectByDiameterRange" class="text-white">

        <div class="d-flex align-items-center">
            <label asp-for="@Model.Min" class="form-label text-white d-inline-block me-3">Диапазон диаметра: </label>
            <input asp-for="@Model.Min" class="form-control bg-dark text-white d-inline-block w-8rem me-3">
            —
            <input asp-for="@Model.Max" class="form-control bg-dark text-white d-inline-block w-8rem mx-3">
            <input type="submit" class="btn btn-primary w-10rem m-3" value="Выбрать">

            <h4 class="text-white">@ViewBag.Title</h4>
        </div>
        <div>
            <span asp-validation-for="Min" class="text-danger"></span>
            <span asp-validation-for="Max" class="text-danger"></span>
        </div>
    </form>

</section>

<section class="mx-5 mt-2 mb-4 shadow-sm bg-dark rounded-3 h-75 p-3">
    @await Component.InvokeAsync(typeof(PlanetsSelectByDiameterRangeComponent), Model)
</section>
