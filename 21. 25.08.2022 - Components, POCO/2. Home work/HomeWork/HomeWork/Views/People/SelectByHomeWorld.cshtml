@using HomeWork.Components
@model HomeWork.Models.BindingModels.StringBindingModel

@{
    ViewBag.Title = $"Выборка по родному миру — \"{Model.Value}\"";
    ViewBag.PageName = "SelectPeople";
}

<section class="mx-5 mt-4 mb-2 shadow-sm bg-dark rounded-3 h-75 p-3">
    <form asp-controller="People" asp-action="SelectByHomeWorld" class="text-white">
        <div class="d-flex align-items-center">
            <label asp-for="Value" class="form-label text-white d-inline-block me-3">Родной мир: </label>
            <select asp-items="@ViewBag.HomeWorldList" asp-for="Value" required class="form-select w-16rem"></select>
            <input type="submit" class="btn btn-primary w-10rem m-3" value="Выбрать">

            <h4>@ViewBag.Title</h4>
        </div>
    </form>

</section>

<section class="mx-5 mt-2 mb-4 shadow-sm bg-dark rounded-3 h-75 p-3">
    @await Component.InvokeAsync(typeof(PeopleSelectByHomeWorldComponent), Model.Value)
</section>
