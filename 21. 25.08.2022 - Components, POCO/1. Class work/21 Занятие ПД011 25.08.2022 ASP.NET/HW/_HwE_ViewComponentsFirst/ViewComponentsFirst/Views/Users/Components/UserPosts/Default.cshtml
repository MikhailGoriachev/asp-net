@model List<ViewComponentsFirst.Model.Post>

<table class="table table-striped table-hover w-90 mx-auto">
    <thead>
    <tr>
        <th>Ид.</th>
        <th>Заголовок поста</th>
        <th>Текст поста</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Id</td>
            <td>@post.Title</td>
            <td>@post.Body</td>
        </tr>
    }
    </tbody>
</table>

<h5 class="text-center">Обработка по заданию</h5>

<ul class="list-group w-45 mx-auto">
    <li class="list-group-item d-flex justify-content-between">Количество постов: <span>@ViewBag.Statistics.Item1</span></li>
    <li class="list-group-item d-flex justify-content-between">Минимальная длина поста: <span>@ViewBag.Statistics.Item2</span></li>
    <li class="list-group-item d-flex justify-content-between">Средняяя длина поста: <span>@ViewBag.Statistics.Item3</span></li>
    <li class="list-group-item d-flex justify-content-between">Минимальная длина поста: <span>@ViewBag.Statistics.Item4</span></li>
</ul>