@model List<ViewComponentsFirst.Model.User>

<h3 class="col-12 text-center">Зарегистрированные пользователи, всего: @ViewBag.Count</h3>
<table class="table table-striped table-hover w-90 mx-auto">
    <thead>
    <tr>
        <th>Ид.</th>
        <th>Полное имя</th>
        <th>Ник</th>
        <th>Email</th>
        <th>Телефон</th>
        <th>Веб-сайт</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Website</td>
                <td class="text-center">
                    <a class="btn btn-outline-primary ms-2"
                       asp-controller="Users"
                       asp-action="UserPosts"
                       asp-route-id="@user.Id" 
                       title="Посты пользователя...">
                        <i class="bi bi-card-text"></i>
                    </a>                   
                    <a class="btn btn-outline-success ms-2"
                       asp-controller="Users"
                       asp-action="UserPhotos"
                       asp-route-id="@user.Id" 
                       title="Фотографии пользователя...">
                        <i class="bi bi-card-image"></i>
                    </a>                   
                    <a class="btn btn-outline-secondary ms-2"
                       asp-controller="Users"
                       asp-action="UserToDos"
                       asp-route-id="@user.Id" 
                       title="Список дел пользователя...">
                        <i class="bi bi-clipboard-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
