@model IEnumerable<HomeWork.Models.Client>

<table class="table table-hover align-middle">
    <thead>
    <tr>
        <th>Id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Паспорт</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var client in Model)
    {
        <tr>
            <th>@client.Id</th>
            <td>@client.Surname</td>
            <td>@client.Name</td>
            <td>@client.Patronymic</td>
            <td>@client.Passport</td>
        </tr>
    }
    </tbody>
</table>
