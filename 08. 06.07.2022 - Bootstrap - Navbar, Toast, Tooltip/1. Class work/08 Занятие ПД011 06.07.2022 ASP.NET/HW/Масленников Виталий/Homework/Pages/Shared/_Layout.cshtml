@functions
{
	private string IsActive(string page) =>
			Url.ActionContext.ActionDescriptor.DisplayName! == page ? "active" : "";
}

<!DOCTYPE html>

<html lang="ru">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width" />

	<title>@ViewBag.Header - Домашняя Работа</title>
	
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css">
	<link rel="shortcut icon" href="~/favicon.png" type="image/x-icon"/>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

</head>

<body>
	
@*хедер*@
<header class="container-fluid">
	<div class="row text-light align-items-center h-100-px ps-4 shadow">
			<h1>@ViewBag.Header</h1>
	</div>
</header>

<div class="container-fluid" style="min-height: 80vh">
	<div class="row">
		@*навигационное меню*@
		<div class="col-md-2 d-flex flex-column align-items-center offset-1 pt-4 text-center">
			<nav class="list-group w-100">
				<a asp-page="/Index"
				   class="list-group-item list-group-item-action text-start @IsActive("/Index")"
				   title="Перейти на страницу">
					Главная
				</a>
				<a asp-page="/Products"
				   class="list-group-item list-group-item-action text-start @IsActive("/Products")"
				   title="Перейти на страницу">
					Бытовая техника
				</a>
				<a asp-page="/Figures"
				   class="list-group-item list-group-item-action text-start @IsActive("/Figures")"
				   title="Перейти на страницу">
					Фигуры
				</a>
				
			</nav>

			@await RenderSectionAsync("Controls", false)
		</div>
		
		@*контент*@
		<div class="col-8 p-5 pt-4">
			<main>
				@RenderBody()
			</main>
		</div>

	</div>
</div>

@*футер*@
<footer class="container-fluid">
	<div class="row align-items-center bg-light" style="height: 4rem">
			<h6 class="text-center">&copy;2022, Масленников Виталий, г. Донецк, КА «ШАГ», ПД011.</h6>
	</div>
</footer>

</body>
</html>