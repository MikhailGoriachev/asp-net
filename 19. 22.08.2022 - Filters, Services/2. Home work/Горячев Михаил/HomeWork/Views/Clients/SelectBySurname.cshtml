@model HomeWork.Models.ViewModels.Clients.SelectBySurnameViewModel

@section Head
{
    <script src="~/js/clientInfo.js"></script>
}

@section NavBar
{
    @await Html.PartialAsync("_ClientsNavBarView")
}

<section class="mx-5 my-4 bg-light shadow-sm border rounded-3 h-75 p-3">

    <h5 class="text-center">@ViewBag.Title</h5>

    <form method="post" asp-controller="Clients" asp-action="SelectBySurname" class="d-inline-flex align-items-center">
        <label asp-for="Surname" class="form-label"></label>
        <select asp-for="Surname" asp-items="@ViewBag.SurnameList" class="form-select w-16rem mx-3"></select>

        <input class="btn btn-success w-10rem me-3" type="submit" value="Выбрать">
    </form>

    @* Рендер таблицы *@
    @await Html.PartialAsync("_ClientsTableView", Model.Clients)

</section>
