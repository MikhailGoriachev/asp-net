@model HomeWork.Controllers.BookBindingForm

<section class="mx-auto my-4 bg-light shadow-sm border rounded-3 h-75 p-3 w-50">

    <form method="post" class="mx-4" asp-controller="Library"
          asp-action="@(ViewBag.IsAdd ? "AddBook" : "EditBook")" enctype="multipart/form-data">

        <h4 class="text-center">@(ViewBag.IsAdd ? "Добавление книги" : "Редактирование книги")</h4>

        <hr>

        @* id *@
        <input asp-for="Id" type="hidden" value="@Model.Id">

        @* автор *@
        <div class="input-group my-3">
            <label asp-for="Author" class="input-group-text w-8rem">Автор</label>
            <input asp-for="Author" type="text" class="form-control"
                   placeholder="Фамилия и инициалы" required>
        </div>

        @* название *@
        <div class="input-group my-3">
            <label asp-for="Title" class="input-group-text w-8rem">Название</label>
            <input asp-for="Title" type="text" class="form-control" required>
        </div>

        @* год выпуска *@
        <div class="input-group my-3">
            <label asp-for="PubYear" class="input-group-text w-8rem">Год выпуска</label>
            <input type="number" asp-for="PubYear" min="1600" class="form-control"
                   placeholder="Год выпуска" required>
        </div>

        @* цена *@
        <div class="input-group my-3">
            <label asp-for="Price" class="input-group-text w-8rem">Цена</label>
            <input type="number" asp-for="Price" min="0" class="form-control"
                   placeholder="Цена" required>
            @* </div> *@

            @* количество *@
            @* <div class="input-group my-3"> *@
            <label asp-for="Count" class="input-group-text w-8rem">Количество</label>
            <input type="number" asp-for="Count" min="0" class="form-control"
                   placeholder="Количество" required>
        </div>

        @* файл с обложной *@
        <div class="input-group my-3">
            <label asp-for="FormFile" class="input-group-text w-8rem">Обложка</label>
            <input asp-for="FormFile" type="file" class="form-control px-4 py-3">
        </div>

        <hr>

        @* управление *@
        <div class="d-flex justify-content-end">
            <input class="btn btn-success w-10rem me-3" type="submit" value="@(ViewBag.IsAdd ? "Добавить" : "Сохранить")">
            <a class="btn btn-danger w-10rem" asp-controller="Library" asp-action="Index">Выйти</a>
        </div>
    </form>

</section>
