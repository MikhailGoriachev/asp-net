<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- подключение файла-иконки -->
    <link rel="shortcut icon" href="~/images/blimp.png" type="image/x-icon">

    <!-- подключение bootstrap локально -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    
    <!-- через CDN подключаем Bootstrap-иконки -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    
    <!-- собственные стили -->
    <link rel="stylesheet" href="~/css/style.css" />
    
    <!-- скрипты Bootstrap -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">ПД011</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#appNavbar-1">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="appNavbar-1">
                <ul class="navbar-nav">
                    @* Вывод всех маршрутов *@
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TouristicRoutes" asp-action="Index"
                           title="Вывод туристических маршрутов в исходном порядке">Маршруты</a>
                    </li>

                    @* Упорядочивание маршрутов *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">Сортировки маршрутов</a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="TouristicRoutes" asp-action="OrderBy"
                                   asp-route-key="length-descend">
                                    По убыванию протяженности маршрута
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                    asp-controller="TouristicRoutes" asp-action="OrderBy"
                                    asp-route-key="length-ascend">
                                    По возрастанию протяженности маршрута
                                </a>
                            </li>                          
                            <li>
                                <a class="dropdown-item"
                                    asp-controller="TouristicRoutes" asp-action="OrderBy"
                                    asp-route-key="complexity-ascend">
                                    По возрастанию сложности
                                </a>
                            </li>
                        </ul>
                    </li>

                    @* Выборки маршрутов *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">Выборки маршрутов</a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li>
                                <a class="dropdown-item"
                                   data-bs-toggle="modal" 
                                   data-bs-target="#get-start-point">
                                    С заданным начальным пунктом
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   data-bs-toggle="modal" 
                                   data-bs-target="#get-middle-point">
                                    С заданным промежуточным пунктом
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   data-bs-toggle="modal" 
                                   data-bs-target="#get-range">
                                    С протяженностью в заданном интервале
                                </a>
                            </li>                          
                        </ul>
                    </li>
                    
                    @* ------------------------------------------------------------------ *@
                    
                    @* Вывод всех инструкторов *@
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Instructors" asp-action="Index"
                           title="Вывод сведений об инструкторах в исходном порядке">Инструкторы</a>
                    </li>

                    @* Упорядочивание сведений об инструкторах *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">Сортировки инструкторов</a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Instructors" asp-action="OrderBy"
                                   asp-route-key="category-descend">
                                    В порядке убывания категорий
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-controller="Instructors" asp-action="OrderBy"
                                   asp-route-key="alphabet">
                                    В алфавитном порядке
                                </a>
                            </li>
                        </ul>
                    </li>

                    @* Выборки сведений об инструкторах *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">Выборки инструкторов</a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li>
                                <a class="dropdown-item"
                                   data-bs-toggle="modal" 
                                   data-bs-target="#get-category">
                                    Инструкторы с заданной категорией 
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>

        </div>
    </nav>

    <main class="container mt-5">
        <div class="row">
            @RenderBody()
        </div>
    </main>

    <footer class="mt-5 p-1 bg-dark text-white text-center">
        <h5>КА Шаг, ПД011, Донецк, 2022</h5>
    </footer>
</body>
</html>
