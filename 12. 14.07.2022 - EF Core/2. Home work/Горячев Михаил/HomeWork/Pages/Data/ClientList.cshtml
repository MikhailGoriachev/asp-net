@page
@model HomeWork.Pages.Data.ClientList

@{
    ViewBag.Title = "Клиенты";
    ViewBag.PageName = "/Data";
}

<section class="mx-5 my-4 bg-light shadow-sm border rounded-3 h-75 p-3">
    <h3 class="display-6 text-center">Клиенты</h3>
    <table class="table table-hover align-middle">
        <thead>
        <tr>
            <th>Id</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Паспорт</th>
            <th>
                <a class="btn btn-success" asp-page-handler="Add" asp-page="/Forms/ClientForm">
                    <i class="bi bi-plus-lg"></i> Добавить
                </a>
            </th>
        </tr>
        </thead>

        <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <th>@client.Id</th>
                <td>@client.Surname</td>
                <td>@client.Name</td>
                <td>@client.Patronymic</td>
                <td>@client.Passport</td>
                <td>
                    <a class="btn btn-outline-primary" asp-page-handler="Edit" asp-page="/Forms/ClientForm" asp-route-id="@client.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</section>
