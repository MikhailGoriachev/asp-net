@page
@model HomeWork.Pages.BookModel
@{
    // индекс страницы
    ViewBag.indexTab = 1;

    // название страницы
    ViewData["Header"] = "Задача 1. Книга";
}

<article>
    <details>

        <summary>
            <h2>Задача 1. Книга</h2>
        </summary>

        <!-- #region Задача 1-->
        <p>
            <b>Задача 1.</b> Имя страницы <b>Book.cshtml</b>. В ответ на GET-запрос клиента /Book выводите представление
            с
            формой для ввода сведений о книге (используйте модель): автор, название, год издания, цена. Метод обработки
            формы – POST, данные книги выводите на этой же странице.
        </p>
        <!-- #endregion -->

    </details>
</article>

<article>
    <div class="container">

        <!-- Форма для ввода данных -->
        <form method="post" class="form">

            <h2 class="text-align-center">Добавление книги</h2>

            <!-- Название -->
            <div class="field">
                <label for="titleBookId" class="field-label">Название:</label>
                <input type="text" id="titleBookId" name="title" class="text-field-input" placeholder="Название книги"
                    value="Совершенный код" required>
            </div>

            <!-- Автор -->
            <div class="field">
                <label for="authorBookId" class="field-label">Автор:</label>
                <input type="text" id="authorBookId" name="author" class="text-field-input" placeholder="Автор"
                    value="Стив Макконнелл" required>
            </div>

            <!-- Год выпуска -->
            <div class="field">
                <label for="yearBookId" class="field-label">Год выпуска:</label>
                <input type="number" id="yearBookId" name="year" min="1700" class="text-field-input"
                    placeholder="Год выпуска" value="1993" required>
            </div>

            <!-- Кнопки управления -->
            <div class="controls center">
                <input class="width-normal" type="submit" value="Добавить" />
            </div>
        </form>

        @if (Model.Book != null)
        {
            <div class="tile">
                <div class="tile-image">
                    <img src="~/images/@Model.Book.FileName" alt="Книга">
                </div>

                <div>Название: <b>@Model.Book.Title</b></div>
                <div>Автор: <b>@Model.Book.Author</b></div>
                <div>Год выпуска: <b>@Model.Book.Year</b></div>
            </div>
        }
    </div>
</article>