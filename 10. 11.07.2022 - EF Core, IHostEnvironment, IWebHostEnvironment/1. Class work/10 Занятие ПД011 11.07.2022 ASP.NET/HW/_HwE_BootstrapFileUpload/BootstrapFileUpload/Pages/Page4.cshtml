@page
@model BootstrapFileUpload.Pages.Page4Model
@{
    ViewBag.Title = "Страница 4";
    ViewBag.Active = "Page4";
    ViewBag.Header = "Фото из коллекции сведений о кораблях";

    // для размещения флага active только на 
    // первом элементе карусели
    int flag = 0;
}

<!-- Условие задачи -->
<a href="#task-4" class="btn btn-outline-secondary text-start" data-bs-toggle="collapse"><b>Страница 4.</b> @ViewBag.Header</a>
<div id="task-4" class="collapse">
    <p class="mt-3">
        Реализуйте карусель для вывода всех фотографий кораблей, хранящихся в Вашем приложении
    </p>
</div>

<!-- Слайд-шоу, карусель -->
<div id="ships" class="carousel mt-3" data-bs-ride="carousel">
    <h3>Фотографии по коллекции сведений о кораблях</h3>
    <div class="carousel-inner">
        
        @* Генерация элементов карусели для коллекции кораблей *@
        @foreach (var ship in Model.DisplayShips)
        {
            <div class="carousel-item @(flag++ == 0?"active":"")">
                <img src="images/task02/@ship.Image" alt="@ship.Name" class="d-block" style="width: 80%">
                <div class="carousel-caption">
                    <h3>@ship.Name</h3>
                    <p>@($"год постройки {ship.Year}, водоизмещение {ship.Displacement} т.")</p>
                </div>
            </div>
        }
    </div>

    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#ships" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#ships" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>


                    
<!-- Слайд-шоу, карусель -->
<div id="photos" class="carousel mt-5" data-bs-ride="carousel">
    <h3>Фотографии формата *.jpg из папки изображений кораблей</h3>
    <div class="carousel-inner">
        
        @* Генерация элементов карусели для коллекции кораблей *@
        @(flag = 0);
        @foreach (var photo in Model.DisplayPhotos)
        {
            <div class="carousel-item @(flag++ == 0?"active":"")">
                <img src="@photo" alt="@photo" class="d-block" style="width: 80%">
                <div class="carousel-caption">
                    <h3>Имя файла: @(System.IO.Path.GetFileName(photo))</h3>
                </div>
            </div>
        }
    </div>

    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#photos" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#photos" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>