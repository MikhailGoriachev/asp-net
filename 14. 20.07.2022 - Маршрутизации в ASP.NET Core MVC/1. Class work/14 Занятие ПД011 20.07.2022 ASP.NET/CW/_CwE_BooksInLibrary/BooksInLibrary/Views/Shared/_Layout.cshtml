<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- подключение файла-иконки -->
    <link rel="shortcut icon" href="~/images/emotion_smile.png" type="image/x-icon">

    <!-- подключение bootstrap локально -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css"/>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">ПД011</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#appNavbar-1">
                <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="appNavbar-1">
                <ul class="navbar-nav">
                    @* Решение задачи 1 *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">Книги</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Library" asp-action="Index">Все книги</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Library" asp-action="AddBook">Добавить книгу</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Library" asp-action="OrderByAuthor">Книги по автору</a></li>
                            <li><a class="dropdown-item" asp-controller="Library" asp-action="OrderByPubYear">Книги по году издания</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <main class="container mt-5">
        <div class="row">
            @RenderBody()
        </div>
    </main>

    <footer class="mt-5 p-1 bg-dark text-white text-center">
        <h5>КА Шаг, ПД011, Донецк, 2022</h5>
    </footer>
</body>
</html>
