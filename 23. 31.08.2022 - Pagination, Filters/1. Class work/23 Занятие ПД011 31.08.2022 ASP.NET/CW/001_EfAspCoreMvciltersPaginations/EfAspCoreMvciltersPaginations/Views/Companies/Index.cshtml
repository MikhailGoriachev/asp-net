@model EfAspCoreMvciltersPaginations.Models.ViewModels.CompanyIndexViewModel

@{
    ViewBag.Title = "Список компаний";
}

<div class="row">
    <h3 class="col-6">@ViewBag.Title</h3>

    <div class="col-4">
        <a asp-controller="Companies" asp-action="Create">Добавить компанию</a>
    </div>
</div>

<table class="table">
    <tr>
        <th>Id</th><th>Название</th><<th></th>
    </tr>
    @foreach (var item in Model.Companies)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                @* отсутствие asp-controller подразумевает текущий контроллер *@
                <a asp-action="edit" asp-route-id="@item.Id">Изменить</a>
            </td>
        </tr>
    }
</table>

@* Навигация по страницам: простейший вариант, только вперед и назад, один мтод действия *@
<div class="mt-3 mx-3">
    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a class="pe-3"
           asp-action="Index"
           asp-route-page="@(Model.PageViewModel.PageNumber - 1)">
            &lt;&lt; Назад
        </a>
    }
    @if (Model.PageViewModel.HasNextPage)
    {
        <a class="ps-3" asp-action="Index"
           asp-route-page="@(Model.PageViewModel.PageNumber + 1)">
            Вперед &gt;&gt;
        </a>
    }
</div>
