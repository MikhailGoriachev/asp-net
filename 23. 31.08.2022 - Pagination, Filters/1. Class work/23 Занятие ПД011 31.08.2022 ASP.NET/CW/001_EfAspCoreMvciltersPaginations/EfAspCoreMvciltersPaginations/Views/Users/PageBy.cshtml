@model EfAspCoreMvciltersPaginations.Models.ViewModels.PageByViewModel
 
   
<h3>Список пользователей сервиса (постраничный вывод)</h3>
<table class="table">
    <tr><th>Имя</th><th>Возраст</th><th>Компания</th></tr>
    @foreach (var u in Model.Users)
    {
        <tr>
            <td>@u.Id</td>
            <td>@u.Name</td>
            <td>@u.Age</td>
            <td>@u.Company?.Name</td>
        </tr>
    }
</table>

@* Навигация по страницам: простейший вариант, только вперед и назад, один мтод действия *@
<div class="mt-3 mx-3">
    @if (Model.PageViewModel.HasPreviousPage)
    {
        <a class="pe-3" 
           asp-action="PageBy"
           asp-route-page="@(Model.PageViewModel.PageNumber - 1)">
              &lt;&lt; Назад
        </a>
    }
    @if (Model.PageViewModel.HasNextPage)
    {
        <a class="ps-3" asp-action="PageBy"
           asp-route-page="@(Model.PageViewModel.PageNumber + 1)">
            Вперед &gt;&gt;
        </a>
    }
</div>