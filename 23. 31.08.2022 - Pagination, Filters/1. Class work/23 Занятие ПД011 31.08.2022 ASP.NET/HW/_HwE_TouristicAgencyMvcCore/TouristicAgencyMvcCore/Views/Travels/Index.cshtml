@model IEnumerable<TouristicAgencyMvcCore.Models.Travel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                <a asp-controller="Travels" asp-action="OrderBy" asp-route-sortOrder="@ViewBag.CountrySort">
                    @Html.DisplayNameFor(model => model.Route.Country.Name)
                </a>
            </th>
            <th>
                <a asp-controller="Travels" asp-action="OrderBy" asp-route-sortOrder="@ViewBag.StartSort">
                    @Html.DisplayNameFor(model => model.Start)
                </a>
            </th>
            <th>
                <a asp-controller="Travels" asp-action="OrderBy" asp-route-sortOrder="@ViewBag.DurationSort">
                    @Html.DisplayNameFor(model => model.Duration)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Route.Country.Name)
            </td>
            <td>
                    @($"{item.Start:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
