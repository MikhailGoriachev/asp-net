@model IEnumerable<HomeWork.Models.RouteViewModel>


<section class="mx-5 my-4 bg-light shadow-sm border rounded-3 h-75 p-3">

    <h5 class="text-center">@ViewBag.Title</h5>

    <form method="post" asp-controller="Routes" asp-action="SelectByRangeLength" class="d-inline-flex align-items-center">
        <label for="min" class="form-label">Диапазон протяженности (км):</label>

        <input type="number" id="min" name="min" class="form-control w-10rem mx-3" min="0" value="0" required>
        <input type="number" id="max" name="max" class="form-control w-10rem mx-3" min="0" value="0" required>

        <input class="btn btn-success w-10rem" type="submit" value="Выбрать">
    </form>

    @* Рендер таблицы *@
    @await Html.PartialAsync("_RoutesTableView", Model)

</section>
