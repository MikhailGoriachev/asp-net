@model HomeWork.Models.Instructor

<section class="mx-auto my-4 bg-light shadow-sm border rounded-3 h-75 p-3 w-50">

    <form method="post" class="mx-4" asp-controller="Instructors"
          asp-action="EditInstructor" enctype="multipart/form-data">

        <h4 class="text-center">Редактирование инструктора</h4>

        <hr>

        @* id *@
        <input asp-for="Id">

        @* фамилия *@
        <div class="input-group my-3">
            <label asp-for="Surname" class="input-group-text w-16rem"></label>
            <input asp-for="Surname" class="form-control" required>
        </div>

        @* имя *@
        <div class="input-group my-3">
            <label asp-for="Name" class="input-group-text w-16rem"></label>
            <input asp-for="Name" class="form-control" required>
        </div>

        @* отчество *@
        <div class="input-group my-3">
            <label asp-for="Patronymic" class="input-group-text w-16rem"></label>
            <input asp-for="Patronymic" class="form-control" required>
        </div>

        @* дата рождения *@
        <div class="input-group my-3">
            <label asp-for="DateOfBirth" class="input-group-text w-16rem"></label>
            <input asp-for="DateOfBirth" class="form-control" required>
        </div>

        @* категория *@
        <div class="input-group my-3">
            <label asp-for="Category" class="input-group-text w-16rem"></label>
            <select asp-for="Category" asp-items="@ViewBag.Categories" class="form-select" required></select>
        </div>

        @* управление *@
        <div class="d-flex justify-content-end">
            <input class="btn btn-success w-10rem me-3" type="submit" value="Сохранить">
            <a class="btn btn-danger w-10rem" asp-controller="Instructors" asp-action="Index">Выйти</a>
        </div>
    </form>

</section>
