@using ComponentContext.Components;
@{
    ViewBag.Title = "Component Arguments";
}

@* вывод таблицы без компонентов *@
<table class="table w-50 mx-5">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    @foreach (var product in ViewBag.Products) {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
        </tr>
    }
</table>
<hr class="my-5"/>

@* Использование компонентов - вывод таблицы управляется параметрами компонента *@

<p>
    @* передача дополнительных параметров компоненту - второй парамер вызоыв InvokeAsync *@
    @await Component.InvokeAsync(nameof(ProductTable), new { showId = false, showTotal = true })
</p>
<hr class="my-5" />
<p>
    @* передача дополнительных параметров компоненту - второй парамер вызова InvokeAsync *@
    @await Component.InvokeAsync(nameof(ProductTable), new { showId = true, showTotal = true })
</p>
<hr class="my-5" />
<p>
    @* передача дополнительных параметров компоненту - второй парамер вызова InvokeAsync *@
    @await Component.InvokeAsync(nameof(ProductTable), new { showId = false })
</p>

