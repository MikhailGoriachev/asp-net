@model HomeWork.Models.ViewModels.Instructors.SelectByCategoryViewModel

@section Head
{
    <script src="~/js/instructorInfo.js"></script>
}

@section NavBar
{
    @await Html.PartialAsync("_InstructorsNavBarView")
}

<section class="mx-5 my-4 bg-light shadow-sm border rounded-3 h-75 p-3">

    <h5 class="text-center">@ViewBag.Title</h5>

    <form method="post" asp-controller="Instructors" asp-action="SelectByCategory" class="d-inline-flex align-items-center">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category" asp-items="@ViewBag.Categories" class="form-select w-5rem mx-3"></select>

        <input class="btn btn-success w-10rem me-3" type="submit" value="Выбрать">
    </form>

    @* Рендер таблицы *@
    @await Html.PartialAsync("_IntructorsTableView", Model.Instructors)

</section>
