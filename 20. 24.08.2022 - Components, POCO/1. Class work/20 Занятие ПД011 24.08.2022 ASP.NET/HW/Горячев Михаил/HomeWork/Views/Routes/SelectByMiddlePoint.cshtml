@model HomeWork.Models.ViewModels.Routes.SelectByMiddlePointViewModel

@section Head
{
    <script src="~/js/routeInfo.js"></script>
}

@section NavBar
{
    @await Html.PartialAsync("_RoutesNavBarView")
}

<section class="mx-5 my-4 bg-light shadow-sm border rounded-3 h-75 p-3">

    <h5 class="text-center">@ViewBag.Title</h5>

    <form method="post" asp-controller="Routes" asp-action="SelectByMiddlePoint" class="d-inline-flex align-items-center">
        <label asp-for="MiddlePoint" class="form-label"></label>
        <select asp-for="MiddlePoint" asp-items="@ViewBag.Points" class="form-select w-16rem mx-3"></select>

        <input class="btn btn-success w-10rem me-3" type="submit" value="Выбрать">
    </form>

    @* Рендер таблицы *@
    @await Html.PartialAsync("_RoutesTableView", Model.Routes)

</section>
