@model Homework.Models.ViewModels.FigureFormViewModel

@{
    ViewBag.Header = "Редактирование фигуры";
    Layout = "_Layout";
}

<h2>Редактирование фигуры "@Model!.FigureInput.Name"</h2>

<div class="row">
    <div class="col-auto">
        <form class="mb-4 p-0" asp-controller="Figures" asp-action="EditFigure" method="post">

            <input type="hidden" asp-for="@Model.FigureInput.Id"/>
            <input type="hidden" asp-for="@Model.FigureInput.Name"/>

            <div class="row mt-3 align-items-center">
                <div class="col-md-auto">
                    <label class="form-label" asp-for="@Model!.FigureInput.A"> Сторона a:</label>
                </div>
                <div class="col-md-auto">
                    <input class="form-control text-end" type="number" asp-for="@Model!.FigureInput.A" step="any" required/>
                </div>
            </div>

            @if (@Model!.FigureInput.B is not null){
                <div class="row mt-3 align-items-center">
                    <div class="col-md-auto">
                        <label class="form-label" asp-for="@Model!.FigureInput.B"> Сторона b: </label>
                    </div>
                    <div class="col-md-auto">
                        <input class="form-control text-end" type="number" asp-for="@Model!.FigureInput.B" step="any" required/>
                    </div>
                </div>
            }

            @if (@Model!.FigureInput.C is not null){
                <div class="row mt-3 align-items-center">
                    <div class="col-md-auto">
                        <label class="form-label" asp-for="@Model!.FigureInput.C"> Сторона c: </label>
                    </div>
                    <div class="col-md-auto">
                        <input class="form-control text-end" type="number" asp-for="@Model!.FigureInput.C" step="any" required/>
                    </div>
                </div>
            }
            
            @if (Model.ErrMsg is not null){
                <div class="alert alert-danger alert-dismissible w-auto mt-3">
                    <button class="btn-close" data-bs-dismiss="alert"></button>
                    <b>Ошибка!</b> @Model.ErrMsg
                </div>
            }

            <div class="row mt-4 text-center">
                <input class="col-3 btn btn-outline-primary w-auto ms-3" type="submit" value="Изменить">
                <a asp-controller="Figures" asp-action="Index" class="col-3 btn btn-outline-secondary ms-3"> Отмена </a>
            </div>
        </form>
    </div>
</div>