@model UsingTagHelpers.Models.Good


@{
    ViewBag.Title = ViewBag.IsAdd ? "Добавление продукта" : "Редактирование продукта";
}

    
@*Форма для записи*@
<div class="offset-3 col-sm-4 mt-5 p-3 border-dark">
    <h4 class="text-center">@ViewBag.Title</h4>
    <form method="post" asp-controller="WholesaleStore" asp-action="@(ViewBag.IsAdd ? "AddGood" : "EditGood")"
         class="bg-light p-2">

        <input type="hidden" asp-for="Id">

        <div class="mt-2 mb-3">
            <label asp-for="NameGood">Наименование продукта</label>
            <input type="text" asp-for="NameGood" class="form-control">            
        </div>

        <input class="btn btn-primary" type="submit" value="@(ViewBag.IsAdd ? "Добавить" : "Сохранить")"/>
        <a class="btn btn-danger w-10rem" asp-controller="WholesaleStore" asp-action="Goods">Отмена</a>
    </form>
</div>