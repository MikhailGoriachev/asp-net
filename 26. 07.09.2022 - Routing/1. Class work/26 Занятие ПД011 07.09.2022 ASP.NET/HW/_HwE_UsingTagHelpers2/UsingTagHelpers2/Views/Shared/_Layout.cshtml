@functions {
    // получить стиль
    string ActivePage(string page) => ViewBag.PageName == page ? "active" : "";
}

<!DOCTYPE html>

<html lang="ru">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/style/style.css" rel="stylesheet" />

    <!-- иконка -->
    <link rel="shorcut icon" href="~/images/blimp.png" type="image/x-icon" />

    <!-- подключение bootstrap локально -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css">

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    @RenderSection("style", false)
</head>
<body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <!-- ссылки на страницы -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link @ActivePage("Index")" asp-controller="Home" asp-action="Index">Главная</a>
                </li>
                <li class="nav-item me-2">
                    <a class="nav-link @ActivePage("Goods")" asp-controller="WholesaleStore" asp-action="Goods">Товары</a>
                </li>
                <li class="nav-item me-2">
                    <a class="nav-link @ActivePage("Sellers")" asp-controller="WholesaleStore" asp-action="Sellers">Продавцы</a>
                </li>
                <li class="nav-item me-2">
                    <a class="nav-link @ActivePage("Purchases")" asp-controller="WholesaleStore" asp-action="Purchases">Закупки</a>
                </li>
                <li class="nav-item me-2">
                    <a class="nav-link @ActivePage("Sales")" asp-controller="WholesaleStore" asp-action="Sales">Продажи</a>
                </li>
                <li class="nav-item dropdown me-2">
                    <a class="nav-link dropdown-toggle @ActivePage("Queries")" href="#" role="button" data-bs-toggle="dropdown">Отчёты</a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" asp-controller="Queries" asp-action="Filter">Фильтр</a></li>
                        <li class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Queries" asp-action="Query04">Запрос с параметром 1 (Запрос 4)</a></li>
                        <li><a class="dropdown-item" asp-controller="Queries" asp-action="Query05">Запрос с параметром 2 (Запрос 5)</a></li>
                        <li><a class="dropdown-item" asp-controller="Queries" asp-action="Query06">Запрос с параметром 3 (Запрос 6)</a></li>
                        <li><a class="dropdown-item" asp-controller="Queries" asp-action="Query07">Запрос с вычисляемым полем (Запрос 7)</a></li>
                        <li class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Queries" asp-action="Query08">Итоговый запрос 1 (Запрос 8)</a></li>
                        <li><a class="dropdown-item" asp-controller="Queries" asp-action="Query09">Итоговый запрос 2 (Запрос 9)</a></li>
                        <li><a class="dropdown-item" asp-controller="Queries" asp-action="Query10">Итоговый запрос 3 (Запрос 10)</a></li>
                        <li><a class="dropdown-item" asp-controller="Queries" asp-action="Query11">Итоговый запрос 4 (Запрос 11)</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <main class="container m-5 p-3">
        @RenderBody()
    </main>

    @* подвал страницы *@
    <footer class="container-fluid bg-dark text-white-50">
        <div id="footer" class="row">
            <h5 class="text-center">
                КА Шаг, группа ПД011 Донецк 2022, Студент Программер
            </h5>
        </div>
    </footer>
</body>
</html>
