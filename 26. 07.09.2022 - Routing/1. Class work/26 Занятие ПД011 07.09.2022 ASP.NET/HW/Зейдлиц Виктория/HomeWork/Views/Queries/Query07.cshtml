@model IOrderedEnumerable<HomeWork.Models.Queries.Query07Result>

@{
    ViewBag.Title = "Прибыль от продажи за каждый проданный товар";

}

<h4 class="text-center">@ViewBag.Title</h4>

@* Вывод выборки данных *@
<table class="table table-striped">
    <thead>
    <tr>
        <th>Дата продажи</th>
        <th>Наименование товара</th>
        <th>Цена закупки</th>
        <th>Цена продажи</th>
        <th>Количество</th>
        <th>Прибыль</th>
    </tr>
    </thead>

    <tbody>
        @foreach (var sale in Model) {
            <tr>
                <td>@($"{sale.SellDate:dd/MM/yyyy}")</td>
                <td>@sale.ProductName</td>
                <td>@sale.PurchasePrice &#8381</td>
                <td>@sale.SellPrice &#8381</td>
                <td>@sale.AmountSale</td>
                <td>@sale.Profit &#8381</td>
                
            </tr>
        }
    </tbody>
</table>
