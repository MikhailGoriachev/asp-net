@model EntityFrameworkInAspNetCoreMvcIntro.Models.User

@{
    ViewBag.Title = "Редактирование пользователя";
}

<h3>@ViewBag.Title</h3>
<form asp-action="edit" asp-controller="users">
    @* Идентификатлор записи передем в метод-обаботчик через скрытое аоел  *@
    <input asp-for="Id" type="hidden"/>
    
    @* чтобы не использовать списочный элемент выбора - из сообажений упрощения *@
    <input asp-for="CompanyId" type="hidden"/>

    <p>
        <label asp-for="Name">Имя</label><br/>
        <input asp-for="Name"/>
    </p>
    <p>
        <label asp-for="Age">Возраст</label><br/>
        <input asp-for="Age"/>
    </p>
    <p>
        <input type="submit" value="Сохранить"/>
    </p>
</form>