@{
    ViewBag.Title = "Список компаний";
}

<div class="row">
    <h3 class="col-6">@ViewBag.Title</h3>

    <div class="col-4"><a asp-controller="Companies" asp-action="Create">Добавить компанию</a></div>
</div>

<table class="table">
    <tr>
        <th>Id</th><th>Название</th><<th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                @* отсутствие asp-controller подразумевает текущий контроллер *@
                <a asp-action="edit" asp-route-id="@item.Id">Изменить</a>
            </td>
        </tr>
    }
</table>