@using HomeWork.Components
@model HomeWork.Models.BindingModels.StringBindingModel

@{
    ViewBag.Title = $"Выборка по типу поверхности — \"{Model.Value}\"";
    ViewBag.PageName = "SelectPlanets";
}

<section class="mx-5 mt-4 mb-2 shadow-sm bg-dark rounded-3 h-75 p-3">
    <form asp-controller="Planets" asp-action="SelectByTerrain" class="text-white">
        <div class="d-flex align-items-center">
            <label asp-for="Value" class="form-label text-white d-inline-block me-3">Тип поверхности: </label>
            <select asp-items="@ViewBag.TerrainList" asp-for="Value" required class="form-select w-16rem"></select>
            <input type="submit" class="btn btn-primary w-10rem m-3" value="Выбрать">

            <h4 class="text-white">@ViewBag.Title</h4>
        </div>
    </form>

</section>

<section class="mx-5 mt-2 mb-4 shadow-sm bg-dark rounded-3 h-75 p-3">
    @await Component.InvokeAsync(typeof(PlanetsSelectByTerrainComponent), Model.Value)
</section>
