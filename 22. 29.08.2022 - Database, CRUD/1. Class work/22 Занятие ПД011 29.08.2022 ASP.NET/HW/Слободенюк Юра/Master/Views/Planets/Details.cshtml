@model PlanetsDetailsViewModel
@{
    Layout = "_Layout";
}

<section class="mt-5 row justify-content-center">
    <div class="col-auto  align-middle card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Population, @Model.Terrain, @Model.Climate</h6>
            <dl class="card-text">
                <dt>Диаметр</dt>
                <dd>@Model.Diameter</dd>
                <dt>Гравитация</dt>
                <dd>@Model.Gravity</dd>
                <dt>Орбитальный период</dt>
                <dd>@Model.OrbitalPeriod</dd>
                <dt>Период вращения</dt>
                <dd>@Model.RotationPeriod</dd>
                <dt>Вода на поверхности</dt>
                <dd>@Model.SurfaceWater</dd>
            </dl>
        </div>
    </div>
</section>